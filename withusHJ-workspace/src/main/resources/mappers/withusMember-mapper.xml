<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="withusMemeberMapper">
	<resultMap type="Member" id="memberRset">
		<result column="member_no" property="memberNo"/>
		<result column="member_id" property="memberId"/>
		<result column="member_pwd" property="memberPwd"/>
		<result column="member_name" property="memberName"/>
		<result column="member_phone" property="memberPhone"/>
		<result column="member_create_dt" property="memberCreateDate"/>
		<result column="member_link" property="memberLink"/>
		<result column="report_count" property="reportCount"/>
		<result column="member_status" property="memberStatus"/>
		<result column="member_profile" property="memberProfile"/>
		<result column="partner_join" property="partnerJoin"/>
		<result column="partner_name" property="partnerName"/>
		<result column="partner_intro" property="partnerIntro"/>
	</resultMap>
	
	<!-- 페이징 처리 -->
	<select id="mSelectListCount" resultType="_int">
		select
			   count(*)
		from member
	</select>
	
	<!-- 회원조회용 -->
	<select id="mSelectList" resultMap="memberRset">
		select
			   member_no
		     , member_id
		     , member_name
		     , to_char(member_create_dt,'YYYY-MM-DD') member_create_dt
		     , partner_join
		     , partner_name
		     , member_status
		  from member  
		 order
		    by member_no desc   
	</select>
	
	<!-- 회원 상태 변경(탈퇴) -->
	<!-- 모달 -->
	<select id="selectMemStatus" resultMap="memberRset" 
			parameterType="_int">
		select
				member_no
			  , member_name
		 from member
		 where member_no = #{memberNo}
	
	</select>
	<!--  -->
	<update id="deleteMember" parameterType="Member" >
		update 
		       member
		   set member_status = #{memberStatus} 
		 where member_no = #{memberNo}      
	</update>
	
	<!-- 검색기능 -->
	<!-- 검색된 총 게시글 -->
	<select id="" resultType="_int" parameterType="hashmap">
		select
				count(*)
		   from	member m
		  where
			  <if test="memberStatus == 'Y'">
			  	and member_status
			  </if>
			  <if test="memberStatus =='N'">
			  	and member_status
			  </if>
			  <if test="memberStatus =='A'">
			  	and member_status
			  </if>
			  like '%' || #{memKeyword} || '%'
		  
	</select>
	<!-- 키워드 검색 -->
	<select id="searchMember" resultMap="memberRset" parameterType="hashmap">
		select 
               member_no
		     , member_id
		     , member_name
		     , to_char(member_create_dt,'YYYY-MM-DD') member_create_dt
		     , partner_join
		     , partner_name
		     , member_status
          from member
         where 
           <choose>
           		<when test="memberStatus == 'Y'">
           			and member_status
           		</when>
           		<when test="memberStatus =='N'">
           			and member_status
           		</when>
           		<when test="memberStatus =='A'">
           			and member_status
           		</when>
           		<otherwise>
           			and member_status
           		</otherwise>
           </choose>
           		like '%' || #{keyword} || '%'           	
         order
            by member_no desc
	</select>
	
</mapper>